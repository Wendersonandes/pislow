<%- cache(element) do -%>
  <%= element_view_for(element) do |el| -%>
    <%- element.contents.picture.each do |picture| -%>
       
         <section style="background-image:url('<%= show_alchemy_picture_path(picture.ingredient, size: '500x500', crop: true) %>');" class= "wow fadeIn" >
     <%- end -%>
            <div class="opacity-medium bg-dark-gray"></div>
            <div class="container position-relative">
                <div class="row">
                    <div class="col-md-6 col-sm-11 center-col text-center">
                        <p class="title-large white-text text-uppercase letter-spacing-2"><strong><%= el.render :headline %></strong><p>
                        <p class="text-large white-text text-uppercase margin-five no-margin-bottom"><%= el.render :text %><p>
                    </div>
                </div>
            </div>
        </section>  
    
  <%- end -%>
<%- end -%>
