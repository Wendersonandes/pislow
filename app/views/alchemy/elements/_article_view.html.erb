<%- cache(element) do -%>
  <%= element_view_for(element) do |el| -%>
       <% if essence = element.content_by_name('picture').essence %>
         <% picture = element.contents.essence_pictures.find_by(name: "picture").essence %> 
       <% end %>

         <section style="background-image:url('<%= show_alchemy_picture_path(picture.ingredient, size: "1200x600", crop: true, crop_from: picture.crop_from, crop_size: picture.crop_size) %>');" class= "wow fadeIn" >

            <div class="opacity-medium bg-dark-gray"></div>
            <div class="container position-relative">
                <div class="row">
                    <div class="col-md-6 col-sm-11 center-col text-center">
                        <p class="title-large white-text text-uppercase letter-spacing-2"><strong><%= el.render :headline %></strong><p>
                        <p class="text-large white-text text-uppercase margin-five no-margin-bottom"><%= el.render :text %><p>
                    </div>
                </div>
            </div>
        </section>  
  <%- end -%>
<%- end -%>
