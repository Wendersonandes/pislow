<% stars = product.stars %>
<% reviews_count = product.reviews_count %>
<div class="ratings" style="border: 0.5px solid #888888; margin-bottom:20px">
  <p><%= Spree.t('Media') %>: <%= render 'spree/reviews/stars', :stars => stars %> (<%= Spree.t('based_upon_review_count', :count => reviews_count) %>)</p>

  <div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
    <meta itemprop="ratingValue" content="<%= stars %>" />
    <meta itemprop="reviewCount" content="<%= reviews_count %>" />
  </div>
</div>